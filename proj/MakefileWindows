#Compiler/Compiler settings
CXX = g++
CXXFLAGS = -Wall -Wextra -Iheaders -IC:/Users/vedmix/SFML-2.6.2/include -DSFML_STATIC
LIBS = -LC:/Users/vedmix/SFML-2.6.2/lib -lsfml-graphics-s -lsfml-window-s -lsfml-system-s -lsfml-main -static -static-libgcc -static-libstdc++ -lgdi32 -lopengl32 -lfreetype -lwinmm

#Project folders
SRC_DIR = src
BUILD_DIR = build
BIN_DIR = bin
TARGET = $(BIN_DIR)/sfml-app.exe

#Finding all the .cpp files in src dir
SRC = $(wildcard $(SRC_DIR)/*.cpp)
#Converting filenames .cpp to .o
OBJ = $(SRC:$(SRC_DIR)/%.cpp=$(BUILD_DIR)/%.o)

#Assembly
all: $(TARGET)

$(TARGET): $(OBJ)
	@if not exist "$(BIN_DIR)" mkdir "$(BIN_DIR)"
	$(CXX) $(OBJ) -o $@ $(LIBS)
	@echo Project successfully assembled to $(TARGET)

$(BUILD_DIR)/%.o: $(SRC_DIR)/%.cpp
	@if not exist "$(BUILD_DIR)" mkdir "$(BUILD_DIR)"
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	@if exist "$(BUILD_DIR)" rmdir /s /q "$(BUILD_DIR)"
	@if exist "$(BIN_DIR)" rmdir /s /q "$(BIN_DIR)"
	@echo Project cleaned

.PHONY: all clean